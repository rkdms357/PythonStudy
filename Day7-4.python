import numpy as np
# indexing
x = np.arange(7)
print(x)
print(x[3])
x[0] = 10
print(x, "\n")

y = np.arange(1, 13, 1).reshape(3, 4)
print(y)
print(y[2, 3], "\n")

# slicing
print(x[1:4])
print(x[1:])
print(x[:4])
print(x[::2])

print(y[1:2,:2:3])
print(y[1:,:2:])
print("\n")

# Boolean indexing (Boolean mask 이용)
print(x < 3)

print(y[y < 3])
print(y[y % 2 == 0])
print("\n")

# Fancy indexing
print(x[[1, 3, 5]])

print(y[[0, 2]])
